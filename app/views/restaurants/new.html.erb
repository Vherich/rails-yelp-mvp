<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Add a new restaurant</h1>

      <%= simple_form_for @restaurant, html: { class: 'form-horizontal' } do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>

        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>