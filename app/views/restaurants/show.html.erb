<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @restaurant.name %></h1>

      <p>Address: <%= @restaurant.address %></p>
      <p>Category: <%= @restaurant.category.upcase %></p>

      <h2>Reviews</h2>

      <% if @restaurant.reviews.any? %>
        <ul>
          <% @restaurant.reviews.each do |review| %>
            <li><%= review.content %> (Rating <%= review.rating %>)</li>
          <% end %>
        </ul>
      <% else %>
        <p>No reviews yet.</p>
      <% end %>

      <%= simple_form_for [@restaurant, @review], html: { class: 'form-horizontal' } do |form| %>
        <%= form.input :content %>

        <%= form.input :rating, collection: [0, 1, 2, 3, 4, 5] %>

        <%= form.button :submit, class: 'btn btn-primary' %>
      <% end %>

      <%= link_to "Back to restaurants", restaurants_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>